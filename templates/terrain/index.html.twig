{% extends 'baseBack.html.twig' %}

{% block title %}Gestion des Terrains{% endblock %}

{% block side %}
<div class="card-body">
    <div class="container-fluid">
        <div class="row">
            {% for terrain in terrains %}
                <div class="col-md-3 mb-4">
                    <div class="card">
                        {% if terrain.image %}
                            <img src="{{ asset('uploads/terrains/' ~ terrain.image) }}" 
                                 class="card-img-top" 
                                 alt="{{ terrain.nom }}">
                        {% else %}
                            <div class="card-img-placeholder">
                                <i class="fas fa-mountain"></i>
                            </div>
                        {% endif %}
                        <div class="card-body d-flex justify-content-between align-items-center">
                            <span class="terrain-name">{{ terrain.nom }}</span>
                            <div class="action-buttons">
                                <a href="{{ path('app_terrain_edit', {'id': terrain.id}) }}" 
                                   class="btn btn-sm btn-view me-1" 
                                   title="Voir les détails">
                                    <i class="fas fa-eye"></i>
                                </a>
                                
                                <a href="{{ path('app_terrain_update', {'id': terrain.id}) }}" 
                                   class="btn btn-sm btn-edit me-1" 
                                   title="Éditer">
                                    <i class="fas fa-edit"></i>
                                </a>
                                
                                <a href="{{ path('app_terrain_delete', {'id': terrain.id}) }}" 
                                   class="btn btn-sm btn-delete" 
                                   onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce terrain ?');" 
                                   title="Supprimer">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}

            <!-- Bouton pour ajouter un terrain -->
            <div class="col-md-3 mb-4">
                <a href="{{ path('terrain_new') }}" class="add-card">
                    <i class="fas fa-plus-circle"></i>
                    <span>Ajouter un terrain</span>
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    :root {
        --primary-color: #16a34a;
        --primary-hover: #15803d;
        --secondary-color: #86efac;
        --border-color: #dcfce7;
        --bg-color: #f0fdf4;
        --danger-color: #dc2626;
        --warning-color: #eab308;
    }

    .card {
        border: none;
        border-radius: 1rem;
        overflow: hidden;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
    }

    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
    }

    .card-img-top {
        object-fit: cover;
        height: 200px;
        width: 100%;
    }

    .card-img-placeholder {
        height: 200px;
        background-color: var(--border-color);
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .card-img-placeholder i {
        font-size: 3rem;
        color: var(--primary-color);
    }

    .card-body {
        padding: 1rem;
        background-color: white;
    }

    .terrain-name {
        font-weight: 600;
        color: #1e293b;
        margin-right: 1rem;
    }

    .action-buttons {
        display: flex;
        gap: 0.25rem;
    }

    .btn {
        padding: 0.5rem;
        border-radius: 0.375rem;
        border: none;
        transition: all 0.2s ease;
    }

    .btn-view {
        color: var(--primary-color);
        background-color: var(--border-color);
    }

    .btn-view:hover {
        background-color: var(--primary-color);
        color: white;
    }

    .btn-edit {
        color: var(--warning-color);
        background-color: #fef9c3;
    }

    .btn-edit:hover {
        background-color: var(--warning-color);
        color: white;
    }

    .btn-delete {
        color: var(--danger-color);
        background-color: #fee2e2;
    }

    .btn-delete:hover {
        background-color: var(--danger-color);
        color: white;
    }

    .add-card {
        height: 300px;
        background-color: var(--bg-color);
        border: 2px dashed var(--border-color);
        border-radius: 1rem;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        text-decoration: none;
        color: var(--primary-color);
        transition: all 0.3s ease;
    }

    .add-card:hover {
        background-color: var(--border-color);
        border-color: var(--primary-color);
        transform: translateY(-5px);
    }

    .add-card i {
        font-size: 3rem;
        margin-bottom: 1rem;
    }

    .add-card span {
        font-weight: 500;
    }

    @media (max-width: 768px) {
        .col-md-3 {
            width: 100%;
        }
    }
</style>

<!-- Ajout de Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
{% endblock %}


