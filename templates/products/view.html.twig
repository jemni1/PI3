{% extends 'baseBack.html.twig' %}

{% block css %}
{{ parent() }} 
<style>
    .container {
        margin-top: 30px;
        padding: 15px;
    }

    h2 {
        text-align: center;
        margin-bottom: 40px;
        color: #333;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        font-size: 32px;
        font-weight: 600;
    }

    .product-detail-card {
        background-color: #fff;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        margin: 20px auto;
        width: 90%;
        max-width: 800px;
    }

    .product-detail-card img {
        width: 100%;
        height: 350px;
        object-fit: cover;
        border-bottom: 2px solid #f1f1f1;
    }

    .product-detail-card .card-body {
        padding: 25px;
    }

    .product-detail-card h5 {
        font-size: 28px;
        font-weight: 600;
        color: #444;
        margin-bottom: 15px;
    }

    .product-detail-card p {
        font-size: 18px;
        color: #555;
        margin: 10px 0;
    }

    .product-detail-card .btn-icon {
        font-size: 20px;
        padding: 10px 15px;
        border-radius: 50%;
        text-decoration: none;
        display: inline-block;
        margin: 10px 5px;
        background-color: #f1f1f1;
        color: #333;
        transition: background-color 0.3s;
    }

    .product-detail-card .btn-icon:hover {
        background-color: #007bff;
        color: white;
    }

    .product-detail-card .card-footer {
        padding: 20px;
        text-align: center;
        background-color: #f9f9f9;
        border-top: 1px solid #f1f1f1;
    }
</style>
{% endblock %}

{% block body %}
{{ parent() }}

<div class="container">
    <h2>Détails du Produit</h2>

    <div class="product-detail-card">
        <img src="{{ asset('uploads/produits/' ~ produit.image) }}" alt="{{ produit.nom }}">

        <div class="card-body">
            <h5>{{ produit.nom }}</h5>
            <p><strong>Quantité:</strong> {{ produit.quantite }}</p>
            <p><strong>Prix:</strong> {{ produit.prix }} €</p>
        </div>

        <div class="card-footer">
            <a href="{{ path('produit_edit', { id: produit.id }) }}" class="btn-icon">
                <i class="fas fa-edit"></i> <!-- Icone Edit -->
            </a>
            <a href="{{ path('app_all_products') }}" class="btn-icon">
                <i class="fas fa-arrow-left"></i> <!-- Icone Retour -->
            </a>
        </div>
    </div>
</div>

{% endblock %}
