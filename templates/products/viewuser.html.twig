{% extends 'baseFront.html.twig' %}

{% block css %}
{{ parent() }}
<style>
    .product-container {
        max-width: 800px;
        margin: 2rem auto;
        background: #f0f9f0;
        padding: 1.5rem;
        border-radius: 25px;
        box-shadow: 0 4px 15px rgba(76, 175, 80, 0.2);
    }

    .product-header {
        text-align: center;
        margin-bottom: 1.5rem;
        padding-bottom: 1rem;
        border-bottom: 2px dashed #81c784;
    }

    .product-title {
        font-size: 1.8rem;
        color: #2e7d32;
        margin: 0.5rem 0;
        font-family: 'Comic Sans MS', cursive;
    }

    .product-image-section {
        text-align: center;
        margin: 1rem 0;
    }

    .product-image {
        width: 300px;
        height: 300px;
        object-fit: cover;
        border-radius: 20px;
        border: 3px solid #c8e6c9;
        box-shadow: 0 4px 10px rgba(76, 175, 80, 0.3);
        transition: transform 0.3s ease;
    }

    .product-image:hover {
        transform: scale(1.02);
    }

    .product-info {
        background: white;
        border-radius: 15px;
        padding: 1rem;
        margin: 1rem 0;
        border: 2px solid #c8e6c9;
    }

    .info-item {
        display: flex;
        align-items: center;
        padding: 0.8rem;
        margin: 0.5rem 0;
        background: #f5f9f5;
        border-radius: 12px;
    }

    .info-label {
        flex: 1;
        color: #2e7d32;
        font-weight: 600;
        font-size: 0.9rem;
    }

    .info-value {
        flex: 2;
        color: #444;
        font-weight: 500;
        text-align: right;
    }

    .price-badge {
        display: inline-block;
        background: #2e7d32;
        color: white;
        padding: 0.5rem 1.5rem;
        border-radius: 20px;
        font-size: 1.2rem;
        margin: 1rem 0;
        box-shadow: 0 2px 5px rgba(46, 125, 50, 0.3);
    }

    .quantity-section {
        text-align: center;
        margin: 1.5rem 0;
    }

    .quantity-input input {
        width: 100px;
        padding: 0.5rem;
        border: 2px solid #81c784;
        border-radius: 15px;
        text-align: center;
        font-size: 1rem;
        background: white;
    }

    .quantity-input input:focus {
        outline: none;
        border-color: #2e7d32;
        box-shadow: 0 0 5px rgba(46, 125, 50, 0.3);
    }

    .action-buttons {
        display: flex;
        gap: 1rem;
        justify-content: center;
        margin-top: 1.5rem;
    }

    .btn {
        padding: 0.7rem 1.5rem;
        border: none;
        border-radius: 20px;
        font-size: 0.9rem;
        cursor: pointer;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .btn-primary {
        background: #2e7d32;
        color: white;
        box-shadow: 0 3px 8px rgba(46, 125, 50, 0.3);
    }

    .btn-secondary {
        background: #c8e6c9;
        color: #2e7d32;
    }

    .btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(46, 125, 50, 0.4);
    }
</style>
{% endblock %}

{% block body %}
<div class="product-container">
    <div class="product-header">
        <h1 class="product-title">âœ¨ {{ produit.nom }} âœ¨</h1>
    </div>

    <div class="product-image-section">
        <img src="{{ asset('uploads/produits/' ~ produit.image) }}" 
             alt="{{ produit.nom }}" 
             class="product-image">
    </div>

    <div class="product-info">
        <div class="info-item">
            <span class="info-label">ðŸŒ¿ Prix</span>
            <span class="info-value">
                <span class="price-badge">{{ produit.prix }} â‚¬</span>
            </span>
        </div>

        <div class="info-item">
            <span class="info-label">ðŸ“¦ Stock</span>
            <span class="info-value">{{ produit.quantite }} disponibles</span>
        </div>
    </div>

    <form action="{{ path('add_to_cart', { id: produit.id }) }}" method="post">
        <div class="quantity-section">
            <div class="quantity-input">
                <input type="number" 
                       name="quantity" 
                       value="1" 
                       min="1" 
                       max="{{ produit.quantite }}"
                       aria-label="QuantitÃ©">
            </div>
        </div>

        <div class="action-buttons">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-cart-plus"></i>
                
            </button>
            <a href="{{ path('listprod') }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i>
                
            </a>
        </div>
    </form>
</div>
{% endblock %}