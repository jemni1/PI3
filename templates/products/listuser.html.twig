{% extends 'baseFront.html.twig' %}

{% block nav %}
    {{ parent() }}

{% endblock %}
{% block body %}
{% for label, messages in app.flashes %}
    <div class="alert alert-{{ label }} mt-2" role="alert">
        {% for message in messages %}
            {{ message }}
        {% endfor %}
    </div>
{% endfor %}

<div class="container mt-4">
    <div class="row g-3">
        {% for product in products %}
    <div class="col-6 col-sm-4 col-md-3 col-lg-2">
    <div class="card shadow-sm border-0" style="border-radius: 10px;">
        <img src="{{ asset('uploads/produits/' ~ product.image) }}" 
             class="card-img-top" 
             alt="{{ product.nom }}" 
             style="height: 120px; object-fit: cover; border-radius: 10px 10px 0 0;">
        
        <div class="card-body p-2 text-center">
            <h6 class="card-title mb-1 text-truncate" style="font-size: 14px;">{{ product.nom }}</h6>
            <p class="fw-bold text-primary mb-2" style="font-size: 14px;">{{ product.prix }} â‚¬</p>

            <form action="{{ path('add_to_cart', { id: product.id }) }}" method="post">
                <div class="row g-1 mt-2 align-items-center">
                    <div class="col-6">
                        <input type="number" name="quantity" 
                               class="form-control form-control-sm text-center input-number quantity" 
                               value="1" min="1" 
                               style="font-size: 12px; padding: 0.25rem;">
                    </div>
                    <div class="col-6">
                        <button type="submit" class="btn btn-sm btn-primary w-100" style="font-size: 12px;">
                            Ajouter
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

{% endfor %}

    </div>
</div>
<div class="text-center mt-4">
    <a href="{{ path('view_cart') }}" class="btn btn-success">
        Voir le Panier
        <svg width="16" height="16" style="vertical-align: middle;">
            <use xlink:href="#cart"></use>
        </svg>
    </a>
</div>
{% endblock %}
