

{% extends 'baseBack.html.twig' %}

{% block nav %}
    <!-- Le contenu de ton menu peut être ici, ou tu peux utiliser {{ parent() }} si tu veux garder le même menu -->
    {{ parent() }}
{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="text-center mb-4">Liste des commandes pour le terrain</h1>

        <table class="table table-bordered table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>ID</th>
                    <th>email</th>
                    <th>Prix total</th>
                    <th>Actions</th>

                </tr>
            </thead>
            <tbody>
                {% for commande in commandes %}
                    <tr>
                        <td>{{ commande.id }}</td>
                        <td>{{ commande.id_client }}</td>
                        <td>{{ commande.prix }} €</td>
                        <td>
                            <a href="{{ path('facture_admin', {'id': commande.id}) }}" class="btn btn-info">
                                Voir la facture
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="7" class="text-center">Aucune commande trouvée pour ce terrain</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
