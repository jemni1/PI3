{% extends 'baseBack.html.twig' %}

{% block nav %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-4 text-primary">Facture de la commande #{{ commande.id }}</h1>

        <div class="card shadow-lg p-4">
            <h4 class="mb-3">Détails de la commande :</h4>
            <ul class="list-group">
                <li class="list-group-item"><strong>ID :</strong> {{ commande.id }}</li>
                <li class="list-group-item"><strong>Produit :</strong> {{ commande.nom }}</li>
                <li class="list-group-item"><strong>Quantité :</strong> {{ commande.quantite }}</li>
                <li class="list-group-item"><strong>Date :</strong> {{ commande.date|date('d-m-Y H:i') }}</li>
                <li class="list-group-item"><strong>Prix total :</strong> {{ commande.prix }} €</li>
            </ul>

            <div class="mt-4 text-center">
        <a href="{{ path('generate_invoice_pdf_admin', { 'commandeId': commande.id }) }}" class="btn btn-success">Télécharger la facture</a>

                <a href="{{ path('admin_commandes_by_terrain' , { 'terrainId': idTerrain }) }}" class="btn btn-secondary">Retour</a>
            </div>
        </div>
    </div>
{% endblock %}
