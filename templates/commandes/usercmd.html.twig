{% extends 'baseFront.html.twig' %}

{% block nav %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-4 text-success font-weight-bold">Détails de la commande</h1>

        <table class="table table-striped table-hover shadow-sm rounded-lg">
            <thead class="thead-light bg-success text-white">
                <tr>
                    <th>Référence</th>
                    <th>Produit</th>
                    <th>Quantité</th>
                    <th>Prix total</th>
                    <th>Date</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>{{ commande.id }}</td>
                    <td>{{ commande.nom }}</td>
                    <td>{{ commande.quantite }}</td>
                    <td>{{ commande.prix }} €</td>
                    <td>{{ commande.date|date('d-m-Y H:i') }}</td>
                </tr>
            </tbody>
        </table>
        <a href="{{ path('generate_invoice_pdf', { 'commandeId': commande.id }) }}" class="btn btn-success">Télécharger la facture</a>

        <a href="{{ path('user_commandes_by_terrain', { userId: commande.id_client }) }}" class="btn btn-primary">Retour à la liste des commandes</a>
    </div>
{% endblock %}
