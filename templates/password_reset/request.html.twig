<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>
    <link rel="stylesheet" href="{{ asset('Back/css/vertical-layout-light/style.css') }}">
    <!-- Include Bootstrap CSS for better styling -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
{% block body %}
<div class="container w-50 mt-5">
    <div class="card p-4 shadow-sm">
        <h2 class="text-center text-primary">Password Reset</h2>
        <p class="text-center mb-4">Enter your email address to receive a password reset link.</p>
        {{ form_start(form) }}
            <div class="form-group">
                {{ form_row(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Enter your email address'}}) }}
            </div>
            <div class="form-group">
                {{ form_row(form.submit, {'attr': {'class': 'btn btn-primary btn-block mt-3'}}) }}
            </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
<!-- Include Bootstrap JS for interactive components (optional) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
