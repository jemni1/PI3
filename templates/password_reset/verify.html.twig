{# Verification Code Form #}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Enter Verification Code</title>
    <!-- Link to custom CSS -->
    <link rel="stylesheet" href="{{ asset('Back/css/vertical-layout-light/style.css') }}">
    <!-- Link to Bootstrap CSS for enhanced styling -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
{% block body %}
<div class="container w-50 mt-5">
    <div class="card p-4 shadow-sm">
        <h2 class="text-center text-primary">Enter Verification Code</h2>
        <p class="text-center mb-4">Please enter the verification code sent to your email.</p>
        {{ form_start(form) }}
            <div class="form-group">
                {{ form_label(form.verification_code) }}
                {{ form_widget(form.verification_code, {'attr': {'class': 'form-control'}}) }}
            </div>
            <a href="{{ path('app_reset_password') }}" class="auth-link text-black">Verify code</a>
        {{ form_end(form) }}
{% endblock %}
<!-- Include Bootstrap JS for interactive components (optional) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
