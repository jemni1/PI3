{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
    <style>
        :root {
            --primary-color: #16a34a;      /* Vert principal */
            --primary-hover: #15803d;      /* Vert foncé pour hover */
            --secondary-color: #86efac;    /* Vert clair pour accents */
            --border-color: #dcfce7;       /* Vert très clair pour bordures */
            --error-color: #ef4444;        /* Rouge pour les erreurs */
            --text-color: #1e293b;         /* Texte foncé */
            --bg-color: #f0fdf4;           /* Fond légèrement teinté de vert */
            --success-color: #22c55e;      /* Vert vif pour succès */
        }

        body {
            background-color: var(--bg-color);
            color: var(--text-color);
            font-family: 'Inter', system-ui, -apple-system, sans-serif;
        }

        .form-container {
            max-width: 800px;
            margin: 2rem auto;
            padding: 2rem;
            background: white;
            border-radius: 1rem;
            box-shadow: 0 4px 6px -1px rgba(22, 163, 74, 0.1);
        }

        .form-header {
            text-align: center;
            margin-bottom: 2.5rem;
            color: var(--primary-color);
            font-weight: 600;
            font-size: 1.875rem;
            border-bottom: 2px solid var(--border-color);
            padding-bottom: 1rem;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-label {
            display: block;
            margin-bottom: 0.5rem;
            font-weight: 500;
            color: var(--text-color);
        }

        .form-control {
            width: 100%;
            padding: 0.75rem 1rem;
            border: 1px solid var(--border-color);
            border-radius: 0.5rem;
            transition: all 0.2s;
            font-size: 1rem;
        }

        .form-control:focus {
            outline: none;
            border-color: var(--primary-color);
            box-shadow: 0 0 0 3px rgba(22, 163, 74, 0.1);
        }

        .form-error {
            color: var(--error-color);
            font-size: 0.875rem;
            margin-top: 0.5rem;
        }

        /* Select2 personnalisé */
        .select2-container--classic .select2-selection--multiple {
            border: 1px solid var(--border-color) !important;
            border-radius: 0.5rem !important;
            padding: 0.25rem !important;
        }

        .select2-container--classic .select2-selection--multiple:focus {
            border-color: var(--primary-color) !important;
            box-shadow: 0 0 0 3px rgba(22, 163, 74, 0.1) !important;
        }

        .select2-container--classic .select2-selection__choice {
            background-color: var(--primary-color) !important;
            color: white !important;
            border: none !important;
            border-radius: 0.25rem !important;
            padding: 0.25rem 0.5rem !important;
        }

        .select2-container--classic .select2-selection__choice__remove {
            color: white !important;
            margin-right: 5px !important;
        }

        /* Bouton personnalisé */
        .btn-primary {
            background-color: var(--primary-color);
            color: white;
            padding: 0.875rem 1.5rem;
            border-radius: 0.5rem;
            border: none;
            font-weight: 500;
            font-size: 1rem;
            cursor: pointer;
            transition: all 0.2s;
            width: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
        }

        .btn-primary:hover {
            background-color: var(--primary-hover);
            transform: translateY(-1px);
        }

       



        
        /* Ajout d'indicateurs de succès */
        .form-success {
            color: var(--success-color);
            font-size: 0.875rem;
            margin-top: 0.5rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container form-container">
        <h1 class="form-header">
            <i class="fas fa-leaf mr-2"></i>
            Gestion du Terrain - DataFarm
        </h1>

        {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
            <!-- Nom du Terrain -->
            <div class="form-group">
                {{ form_label(form.nom, "Nom du Terrain", {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.nom, {
                    'attr': {
                        'class': 'form-control',
                        'placeholder': 'Ex: Tomate'
                    }
                }) }}
                {{ form_errors(form.nom, {'attr': {'class': 'form-error'}}) }}
            </div>

            

            <!-- Superficie -->
            <div class="form-group">
                {{ form_label(form.periodePlantation , "periodePlantation ", {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.periodePlantation , {
                    'attr': {
                        'class': 'form-control',
                        'placeholder': 'Ex: 5000'
                    }
                }) }}
                {{ form_errors(form.periodePlantation , {'attr': {'class': 'form-error'}}) }}
            </div>
            <div class="form-group">
                {{ form_label(form.periodeRecolte , "periodeRecolte ", {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.periodeRecolte , {
                    'attr': {
                        'class': 'form-control',
                        'placeholder': 'Ex: 5000'
                    }
                }) }}
                {{ form_errors(form.periodeRecolte , {'attr': {'class': 'form-error'}}) }}
            </div>
            <div class="form-group">
                {{ form_label(form.besoinEau , "besoinEau ", {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.besoinEau , {
                    'attr': {
                        'class': 'form-control',
                        'placeholder': 'Ex: 5000'
                    }
                }) }}
                {{ form_errors(form.besoinEau , {'attr': {'class': 'form-error'}}) }}
            </div>

           

            <!-- Bouton de Soumission -->
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-leaf"></i>
                Enregistrer le Terrain
            </button>

        {{ form_end(form) }}
    </div>
{% endblock %}