                    <div class="mb-3">
                        {{ form_label(form.dateFin, 'üìÖ Date de fin', {'label_attr': {'class': 'form-label text-dark fw-bold fs-5'}}) }}
                        {{ form_widget(form.dateFin, {'attr': {'class': 'form-control border-success'}}) }}
