                            <i class="fas fa-save"></i> Enregistrer
                        </button>
                        <a href="{{ path('admin_recyclage_list') }}" class="btn btn-outline-secondary px-4 fs-5 fw-bold">
                            <i class="fas fa-arrow-left"></i> Retour
                        </a>
                    </div>

                    {{ form_end(form) }}
