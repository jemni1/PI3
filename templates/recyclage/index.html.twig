{% extends 'baseBack.html.twig' %}

{% block title %} Gestion du Recyclage et Collecte {% endblock %}

{% block body %}
{{ parent() }}
<style>
    /* Couleur verte douce pour le hover */
    .table-hover tbody tr:hover {
        background-color: #e8f5e9 !important; /* Vert clair apaisant */
    }

    /* Boutons uniformes sans effet violet */
    .btn:hover {
        filter: brightness(90%);
    }

    /* Suppression du violet Bootstrap sur les liens */
    a {
        color: inherit;
        text-decoration: none;
    }
    a:hover {
        color: #2e7d32 !important; /* Vert fonc√© pour le survol */
    }
</style>

<div class="container mt-4">
    <!-- Gestion du recyclage -->
    <div class="card shadow-lg border-0" style="background-color: #e8f5e9;">
        <div class="card-header text-white d-flex justify-content-between align-items-center" style="background-color: #388e3c;">
            <h2 class="mb-0">‚ôªÔ∏è Op√©rations de recyclage</h2>
            <a href="{{ path('admin_recyclage_new') }}" class="btn btn-light text-success fw-bold">
                <i class="fas fa-plus-circle"></i> Ajouter
            </a>
        </div>
        <div class="card-body bg-white">  {# Fond blanc ici #}
            <table class="table table-hover text-center bg-white">
                <thead style="background-color: #66bb6a; color: white;">
                    <tr>
                        <th>ID</th>
                        <th>Date</th>
                        <th>Quantit√© (kg)</th>
                        <th>√ânergie (kWh)</th>
                        <th>Utilisation</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for recyclage in recyclages %}
                        <tr class="align-middle">
                            <td>{{ recyclage.id }}</td>
                            <td>{{ recyclage.dateRecyclage|date('d/m/Y') }}</td>
                            <td class="fw-bold text-success">{{ recyclage.quantiteRecyclee }}</td>
                            <td class="fw-bold text-primary">{{ recyclage.energieProduite }}</td>
                            <td>{{ recyclage.utilisation }}</td>
                            <td>
                                <a href="{{ path('admin_recyclage_edit', {'id': recyclage.id}) }}" class="btn btn-outline-warning btn-sm">
                                    <i class="fas fa-edit"></i> Modifier
                                </a>
                                <a href="{{ path('admin_recyclage_delete', {'id': recyclage.id}) }}" class="btn btn-outline-danger btn-sm" onclick="return confirm('√ätes-vous s√ªr de vouloir supprimer ?');">
                                    <i class="fas fa-trash-alt"></i> Supprimer
                                </a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6" class="text-center text-muted">Aucune op√©ration de recyclage trouv√©e.</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <!-- S√©parateur -->
    <hr class="my-5 border-success">

    <!-- Gestion des collectes -->
    <div class="card shadow-lg border-0" style="background-color: #f0f7ec;">
        <div class="card-header text-white" style="background-color: #558b2f;">
            <h2 class="mb-0">üóë Collectes de d√©chets</h2>
        </div>
        <div class="card-body bg-white"> {# Fond blanc ici aussi #}
            <table class="table table-hover text-center bg-white">
                <thead style="background-color: #81c784; color: white;">
                    <tr>
                        <th>ID</th>
                        <th>Type</th>
                        <th>Quantit√© (kg)</th>
                        <th>Date</th>
                    </tr>
                </thead>
                <tbody>
                    {% for collecte in collectes %}
                        <tr class="align-middle">
                            <td>{{ collecte.id }}</td>
                            <td class="fw-bold text-success">{{ collecte.typeDechet }}</td>
                            <td class="fw-bold text-primary">{{ collecte.quantite }}</td>
                            <td>{{ collecte.dateCollecte|date('d/m/Y') }}</td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4" class="text-center text-muted">Aucune collecte de d√©chets trouv√©e.</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
